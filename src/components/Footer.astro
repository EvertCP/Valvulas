<style>
  .footer {
    background-color: var(--color-primary);
    color: white;
    padding: 4rem 2rem 2rem;
    margin-top: 4rem;
  }

  .footer-content {
    max-width: 1200px;
    margin: 0 auto;
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    gap: 2rem;
  }

  .footer-section h3 {
    font-size: 1.5rem;
    margin-bottom: 1.5rem;
    position: relative;
  }

  .footer-section h3::after {
    content: '';
    position: absolute;
    bottom: -0.5rem;
    left: 0;
    width: 50px;
    height: 2px;
    background-color: white;
  }

  .contact-item {
    display: flex;
    align-items: flex-start;
    gap: 1rem;
    margin-bottom: 1rem;
  }

  .contact-item svg {
    flex-shrink: 0;
    margin-top: 0.25rem;
  }

  .contact-item p {
    margin: 0;
    line-height: 1.5;
  }

  .footer-bottom {
    margin-top: 3rem;
    padding-top: 2rem;
    border-top: 1px solid rgba(255, 255, 255, 0.1);
    text-align: center;
  }

  @media (max-width: 768px) {
    .footer {
      padding: 3rem 1rem 1.5rem;
    }

    .footer-content {
      grid-template-columns: 1fr;
      text-align: center;
    }

    .footer-section h3::after {
      left: 50%;
      transform: translateX(-50%);
    }

    .contact-item {
      justify-content: center;
    }
  }
</style>
